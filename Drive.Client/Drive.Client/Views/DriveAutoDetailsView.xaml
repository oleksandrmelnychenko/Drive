<?xml version="1.0" encoding="utf-8" ?>
<viewBase:ContentPageBaseView
    x:Class="Drive.Client.Views.DriveAutoDetailsView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:actionBars="clr-namespace:Drive.Client.Views.ActionBars"
    xmlns:dependency="clr-namespace:Drive.Client.ViewModels.Base"
    xmlns:viewBase="clr-namespace:Drive.Client.Views.Base"
    dependency:DependencyLocator.AutoWireViewModel="True">

    <viewBase:ContentPageBaseView.ActionBar>
        <actionBars:CommonActionBarView />
    </viewBase:ContentPageBaseView.ActionBar>

    <viewBase:ContentPageBaseView.MainContent>
        <Grid
            Padding="20"
            BackgroundColor="White"
            RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.Resources>
                <ResourceDictionary>
                    <Style x:Key="descriptionLabel" TargetType="Label">
                        <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
                        <Setter Property="FontSize" Value="{StaticResource MediumSize}" />
                    </Style>

                    <Style x:Key="detailBase" TargetType="Label">
                        <Setter Property="HorizontalOptions" Value="Start" />
                        <Setter Property="VerticalOptions" Value="Center" />
                    </Style>

                    <Style
                        x:Key="valueLabel"
                        BasedOn="{StaticResource detailBase}"
                        TargetType="Label">
                        <Setter Property="HorizontalOptions" Value="End" />
                        <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
                        <Setter Property="FontSize" Value="{StaticResource LittleSize}" />
                    </Style>

                    <Style
                        x:Key="titleLabel"
                        BasedOn="{StaticResource detailBase}"
                        TargetType="Label">
                        <Setter Property="TranslationY" Value="-5" />
                        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
                        <Setter Property="FontSize" Value="{StaticResource MediumSize}" />
                    </Style>
                </ResourceDictionary>
            </Grid.Resources>

            <StackLayout Grid.Row="0" BackgroundColor="Yellow">
                <Label
                    HorizontalOptions="Center"
                    Style="{StaticResource descriptionLabel}"
                    Text="{Binding DriveAuto.NRegNew}"
                    VerticalOptions="Center" />
                <Label
                    HorizontalOptions="Center"
                    Style="{StaticResource descriptionLabel}"
                    Text="{Binding DriveAuto.OperName}"
                    VerticalOptions="Center" />
            </StackLayout>


            <ScrollView Grid.Row="1">
                <StackLayout Spacing="15">
                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Дата реєстрації" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.DReg}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Код ТСЦ" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.DepCode}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="ТСЦ" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.Dep}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Марка" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.Brand}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Рік випуску" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.MakeYear}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Колір" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.Color}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Тип" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.Kind}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Тип кузова" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.Body}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Призначення" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.Purpose}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Тип палива" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.Fuel}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Об'єм двигуна" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.Capacity}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Маса без навантаження" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.OwnWeight}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Повна маса" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.TotalWeight}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label Style="{StaticResource titleLabel}" Text="Реєстраційний номер" />
                        <Label Style="{StaticResource valueLabel}" Text="{Binding DriveAuto.NRegNew}" />
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </Grid>
    </viewBase:ContentPageBaseView.MainContent>
</viewBase:ContentPageBaseView>