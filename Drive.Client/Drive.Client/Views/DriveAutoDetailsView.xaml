<?xml version="1.0" encoding="utf-8" ?>
<viewBase:ContentPageBaseView
    x:Class="Drive.Client.Views.DriveAutoDetailsView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:actionBars="clr-namespace:Drive.Client.Views.ActionBars"
    xmlns:dependency="clr-namespace:Drive.Client.ViewModels.Base"
    xmlns:viewBase="clr-namespace:Drive.Client.Views.Base"
    dependency:DependencyLocator.AutoWireViewModel="True">

    <viewBase:ContentPageBaseView.ActionBar>
        <actionBars:CommonActionBarView />
    </viewBase:ContentPageBaseView.ActionBar>

    <viewBase:ContentPageBaseView.MainContent>
        <Grid
            Padding="20"
            BackgroundColor="White"
            RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.Resources>
                <ResourceDictionary>
                    <Style x:Key="descriptionLabel" TargetType="Label">
                        <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
                        <Setter Property="FontSize" Value="{StaticResource MediumSize}" />
                    </Style>

                    <Style x:Key="detailBase" TargetType="Label">
                        <Setter Property="HorizontalOptions" Value="Start" />
                        <Setter Property="VerticalOptions" Value="Center" />
                    </Style>

                    <Style
                        x:Key="valueLabel"
                        BasedOn="{StaticResource detailBase}"
                        TargetType="Label">
                        <Setter Property="HorizontalOptions" Value="EndAndExpand" />
                        <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
                        <Setter Property="FontSize" Value="{StaticResource MediumSize}" />
                    </Style>

                    <Style
                        x:Key="titleLabel"
                        BasedOn="{StaticResource detailBase}"
                        TargetType="Label">
                        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
                        <Setter Property="FontSize" Value="{StaticResource LittleSize}" />
                    </Style>
                </ResourceDictionary>
            </Grid.Resources>

            <StackLayout Grid.Row="0" Margin="20,0,0,0">
                <Label
                    FontSize="{StaticResource LargerSize}"
                    Style="{StaticResource descriptionLabel}"
                    Text="{Binding DriveAuto.NRegNew}"
                    VerticalOptions="Center" />
                <Label
                    Style="{StaticResource descriptionLabel}"
                    Text="{Binding DriveAuto.OperName}"
                    VerticalOptions="Center" />
            </StackLayout>

            <ScrollView Grid.Row="1">
                <Grid RowSpacing="6" VerticalOptions="Start">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Style="{StaticResource titleLabel}"
                        Text="Дата реєстрації" />
                    <Label
                        Grid.Row="0"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.DReg}" />

                    <Label
                        Grid.Row="1"
                        Style="{StaticResource titleLabel}"
                        Text="Код ТСЦ" />
                    <Label
                        Grid.Row="1"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.DepCode}" />

                    <Label
                        Grid.Row="2"
                        Style="{StaticResource titleLabel}"
                        Text="ТСЦ" />
                    <Label
                        Grid.Row="2"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.Dep}" />

                    <Label
                        Grid.Row="3"
                        Style="{StaticResource titleLabel}"
                        Text="Марка" />
                    <Label
                        Grid.Row="3"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.Brand}" />

                    <Label
                        Grid.Row="4"
                        Style="{StaticResource titleLabel}"
                        Text="Рік випуску" />
                    <Label
                        Grid.Row="4"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.MakeYear}" />

                    <Label
                        Grid.Row="5"
                        Style="{StaticResource titleLabel}"
                        Text="Колір" />
                    <Label
                        Grid.Row="5"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.Color}" />

                    <Label
                        Grid.Row="6"
                        Style="{StaticResource titleLabel}"
                        Text="Тип" />
                    <Label
                        Grid.Row="6"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.Kind}" />

                    <Label
                        Grid.Row="7"
                        Style="{StaticResource titleLabel}"
                        Text="Тип кузова" />
                    <Label
                        Grid.Row="7"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.Body}" />

                    <Label
                        Grid.Row="8"
                        Style="{StaticResource titleLabel}"
                        Text="Призначення" />
                    <Label
                        Grid.Row="8"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.Purpose}" />

                    <Label
                        Grid.Row="9"
                        Style="{StaticResource titleLabel}"
                        Text="Тип палива" />
                    <Label
                        Grid.Row="9"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.Fuel}" />

                    <Label
                        Grid.Row="10"
                        Style="{StaticResource titleLabel}"
                        Text="Об'єм двигуна" />
                    <Label
                        Grid.Row="10"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.Capacity}" />

                    <Label
                        Grid.Row="11"
                        Style="{StaticResource titleLabel}"
                        Text="Маса без навантаження" />
                    <Label
                        Grid.Row="11"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.OwnWeight}" />

                    <Label
                        Grid.Row="12"
                        Style="{StaticResource titleLabel}"
                        Text="Повна маса" />
                    <Label
                        Grid.Row="12"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.TotalWeight}" />

                    <Label
                        Grid.Row="13"
                        Style="{StaticResource titleLabel}"
                        Text="Реєстраційний номер" />
                    <Label
                        Grid.Row="13"
                        Style="{StaticResource valueLabel}"
                        Text="{Binding DriveAuto.NRegNew}" />

                </Grid>
            </ScrollView>
        </Grid>
    </viewBase:ContentPageBaseView.MainContent>
</viewBase:ContentPageBaseView>